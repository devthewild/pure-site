<form class="pure-form pure-form-stacked">
    <fieldset>
        <legend>회원가입</legend>
        <!-- 한국어화에 맞추기 위해 성-이름 순으로 변경 -->

        <div class="pure-g-r">
            <div class="pure-u-1-3">
                <label for="{{id 'first-name'}}">성</label>
                <input id="{{id 'first-name'}}" type="text">
            </div>

            <div class="pure-u-1-3">
                <label for="{{id 'last-name'}}">이름</label>
                <input id="{{id 'last-name'}}" type="text">
            </div>

            <div class="pure-u-1-3">
                <label for="{{id 'email'}}">E-Mail</label>
                <input id="{{id 'email'}}" type="email" required>
            </div>

            <div class="pure-u-1-3">
                <label for="{{id 'city'}}">도시</label>
                <input id="{{id 'city'}}" type="text">
            </div>

            <div class="pure-u-1-3">
                <label for="{{id 'state'}}">주소</label>
                <select id="{{id 'state'}}" class="pure-input-medium">
                    <option>서울</option>
                    <option>경기도</option>
                    <option>인천</option>
                </select>
            </div>
        </div>

        <label for="{{id 'terms'}}" class="pure-checkbox">
            <input id="{{id 'terms'}}" type="checkbox"> 약관과 조건을 읽었습니다.
        </label>

        <button type="submit" class="pure-button notice">가입</button>
    </fieldset>
</form>
